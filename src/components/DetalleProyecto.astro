---
const { title, description, details } = Astro.props;
---

<section class="mt-8 max-w-4xl mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">
  <a href="/" class="text-green-400 hover:text-green-300 transition inline-block mb-4">Volver a Proyectos</a>
  <h2 class="text-3xl font-bold text-center mb-4 text-green-400">{title}</h2>
  <p class="text-gray-300 mb-4">{description}</p>
  <div class="text-gray-300 space-y-2">
    {details.map(detail => (
      <p class="mb-2">{detail}</p>
    ))}
  </div>
  <form class="mt-8">
    <textarea class="w-full p-2 rounded-lg bg-gray-700 text-gray-300" rows="4" placeholder="Escribe tu pregunta o duda aquÃ­..."></textarea>
    <button type="submit" class="mt-4 px-4 py-2 bg-green-400 text-white rounded-lg hover:bg-green-300 transition">Enviar</button>
  </form>
</section>
